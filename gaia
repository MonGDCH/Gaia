#!/usr/bin/env php
<?php

/*
|--------------------------------------------------------------------------
| 加载composer
|--------------------------------------------------------------------------
| 加载composer autoload文件
|
*/
require __DIR__ . '/vendor/autoload.php';


/*
|--------------------------------------------------------------------------
| 初始化Gaia
|--------------------------------------------------------------------------
| 这里初始化Gaia
|
*/
$console = \gaia\App::init();


/*
|--------------------------------------------------------------------------
| 运行Gaia
|--------------------------------------------------------------------------
| 这里运行Gaia
|
*/
$console->run();
