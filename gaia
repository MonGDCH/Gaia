#!/usr/bin/env php
<?php

/*
|--------------------------------------------------------------------------
| 加载composer
|--------------------------------------------------------------------------
| 加载composer autoload文件
|
*/
require __DIR__ . '/vendor/autoload.php';


/*
|--------------------------------------------------------------------------
| 获取指令应用实例
|--------------------------------------------------------------------------
| 这里获取指令应用实例
|
*/
$console = new \mon\console\App;


/*
|--------------------------------------------------------------------------
| 初始化Gaia
|--------------------------------------------------------------------------
| 这里对Gaia进行初始化
|
*/
\gaia\App::init($console);


/*
|--------------------------------------------------------------------------
| 执行指令
|--------------------------------------------------------------------------
| 这里执行指令
|
*/
$console->run();
