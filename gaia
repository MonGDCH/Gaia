#!/usr/bin/env php
<?php

/*
|--------------------------------------------------------------------------
| 加载composer
|--------------------------------------------------------------------------
| 加载composer autoload文件
|
*/
require_once __DIR__ . '/vendor/autoload.php';


/*
|--------------------------------------------------------------------------
| 初始化Gaia
|--------------------------------------------------------------------------
| 这里初始化Gaia
|
*/
$console = \gaia\App::init();


/*
|--------------------------------------------------------------------------
| Plugins插件支持
|--------------------------------------------------------------------------
| 注册Plugins插件
|
*/
\support\Plugin::register();


/*
|--------------------------------------------------------------------------
| 运行Gaia
|--------------------------------------------------------------------------
| 这里运行Gaia
|
*/
$console->run();
